@model IEnumerable<BlogApp.Entities.CategoryModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <p>
        @Html.ActionLink("Yeni Kategori Oluştur", "Create", null, new { @class = "btn btn-success" })
    </p>
<table class="table">
    <tr>
        <th width="70%">
            Kategori Adı
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-primary mb-2 " })
            @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger ml-4" })
        </td>
    </tr>
}

</table>
